<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
	<TableRow android:layout_height="20dip" android:layout_width="match_parent" android:background="#FF909090">
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Position sharing settings" android:textSize="18px" android:padding="1dip" />
	</TableRow>
         
  	<TableRow android:layout_height="wrap_content" android:layout_width="match_parent">
  		<LinearLayout android:orientation="horizontal" android:padding="5px">
  			<TextView android:id="@+id/event_start_datetime_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/str_event_start"></TextView>
  			<TextView android:id="@+id/event_start_datetime_value" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="right"></TextView>
  		</LinearLayout>
  	</TableRow>
  	<TableRow android:layout_height="wrap_content" android:layout_width="match_parent">
  		<LinearLayout android:orientation="horizontal" android:paddingLeft ="5px">
  			<TextView android:layout_width="230dip" android:layout_height="match_parent" android:text="@string/str_allow_on" android:gravity="center_vertical" /> 
  			<CheckBox android:id="@+id/allow_logging" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" " android:gravity="right" />
  		</LinearLayout>
  	</TableRow>
  	<TableRow android:layout_height="wrap_content" android:layout_width="match_parent">
  		<LinearLayout android:orientation="horizontal">
			<Button android:id="@+id/choose_logging_start_date" android:enabled="false" android:text="Data" android:layout_width="190dip" android:layout_height="wrap_content"/>
			<Button android:id="@+id/choose_logging_start_time" android:enabled="false" android:text="Time" android:layout_width="130dip" android:layout_height="wrap_content"/>
  		</LinearLayout>
  	</TableRow>
  	
  	<TableRow android:layout_height="20dip" android:layout_width="match_parent" android:background="#FF909090">
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Attendees list" android:textSize="18px" android:padding="1dip" />
	</TableRow>
  	
    <TableRow android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableRow3">
        <ListView android:id="@+id/attendee_list" android:layout_height="wrap_content" android:layout_width="wrap_content"></ListView>
    </TableRow>
</TableLayout>
